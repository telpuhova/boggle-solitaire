<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boop442.bogglesolitaire.GameActivity">


    <GridView
        android:id="@+id/baseGridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:columnWidth="50sp"
        android:gravity="left"
        android:numColumns="4"
        android:padding="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"/>


    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputWordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@color/colorPrimaryDark"
        android:text="submit"
        android:textColor="@color/colorTextIcons" />


    <EditText
        android:id="@+id/inputWordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/baseGridView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"

        android:background="@color/colorPrimaryLight"
        android:ems="10"
        android:hint="enter a word"

        android:padding="5dp" />


    <Button
        android:id="@+id/getResultsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="@color/colorPrimaryDark"
        android:text="get results"
        android:textColor="@color/colorTextIcons" />


</RelativeLayout>
